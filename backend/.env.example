# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sparta_ai
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider Configuration - Get your keys from provider websites
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-REPLACE_WITH_YOUR_OPENAI_KEY
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Anthropic (Optional) - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_ANTHROPIC_KEY
ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Code Generation Settings
DEFAULT_AI_PROVIDER=openai
CODE_GENERATION_TEMPERATURE=0.3
CODE_GENERATION_MAX_TOKENS=2000

# Conversation Memory Settings
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TOKEN_LIMIT=8000
CONVERSATION_CLEANUP_THRESHOLD=3600
