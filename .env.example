# Example environment variables for Sparta AI stack
# Copy to .env and edit for production

# Backend
DATABASE_URL=postgresql+psycopg://sparta:sparta_pass@db:5432/sparta_db
REDIS_URL=redis://redis:6379/0
SECRET_KEY=your-very-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL
POSTGRES_USER=sparta
POSTGRES_PASSWORD=sparta_pass
POSTGRES_DB=sparta_db

# Redis
REDIS_PASSWORD=

# Frontend
REACT_APP_API_URL=https://sparta.local/api/

# Monitoring
PROMETHEUS_SCRAPE_INTERVAL=15s
GRAFANA_ADMIN_PASSWORD=admin

# ELK
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme

# SSL
SSL_CERT_PATH=nginx/certs/server.crt
SSL_KEY_PATH=nginx/certs/server.key
